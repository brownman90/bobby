<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tiago.bobby"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tiago.bobby.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tiago.bobby.AddPersonActivity"
            android:label="@string/title_activity_add_person" >
        </activity>
        <activity
            android:name="com.tiago.bobby.ListFriendsActivity"
            android:label="@string/title_activity_list_friends" >
        </activity>
        <activity
            android:name="com.tiago.bobby.AddFriendActivity"
            android:label="@string/title_activity_add_friend" >
        </activity>
        <activity
            android:name="com.tiago.bobby.RecommendationsActivity"
            android:label="@string/title_activity_recommendations" >
        </activity>
        <activity
            android:name="com.tiago.bobby.RemovePersonActivity"
            android:label="@string/title_activity_remove_person" >
        </activity>
    </application>

</manifest>
